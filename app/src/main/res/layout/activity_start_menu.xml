<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:divider="@drawable/divider"
    android:dividerPadding="10dp"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context=".StartMenuActivity">

    <TextView
        android:id="@+id/menu_tv_start_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawableLeft="@drawable/ic_thunder_24dp"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:text="@string/start_session"
        android:textAlignment="gravity"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/menu_tv_dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawableLeft="@drawable/ic_dictionary_24dp"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:text="@string/dictionary"
        android:textAlignment="gravity"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/menu_tv_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawableLeft="@drawable/ic_statistics_24dp"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:text="@string/statistics"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/menu_tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawableLeft="@drawable/ic_settings_24dp"
        android:drawablePadding="10dp"
        android:gravity="start|center_vertical"
        android:text="@string/settings"
        android:textSize="28sp" />

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>